<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calc_button_style" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/calc_button_foreground</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">#20000000</item>
        <item name="backgroundTint">@null</item>
    </style>



    <style name="calc_table_row_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="buttonStyle">@style/calc_button_style</item>
    </style>



</resources>